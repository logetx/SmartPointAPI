generator client {
    provider                = "prisma-client-py"
    interface               = "asyncio"
    recursive_type_depth    = 5
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model admin {
    id              Int      @id @default(autoincrement())
    username        String   @unique
    password        String
}

model user {
    id             String    @id
    name           String

    games          game[]
}

model game {
    id             Int       @id @default(autoincrement())
    home_score     Int
    away_score     Int
    
    user           user      @relation(fields: [user_id], references: [id])
    user_id        String
}
