generator client {
    provider                = "prisma-client-py"
    interface               = "asyncio"
    recursive_type_depth    = 5
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model admin {
    id              Int      @id @default(autoincrement())
    username        String   @unique
    password        String
}

model user {
    id             String    @id
    name           String
}

model game {
    id             Int       @id
    home_score     Int
    away_score     Int
}
